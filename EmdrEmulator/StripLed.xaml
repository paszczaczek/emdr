<UserControl x:Class="EmdrEmulator.StripLed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:EmdrEmulator"
             mc:Ignorable="d" 
             d:DataContext="{x:Static local:StripLed+Model.DesignTime}"
             >
    <ItemsControl ItemsSource="{Binding Leds}">
        <ItemsControl.Resources>
            <system:Double x:Key="radius">10</system:Double>
            <system:Double x:Key="fontSize">10</system:Double>
        </ItemsControl.Resources>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid HorizontalAlignment="Right">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Ellipse x:Name="el" Grid.Row="0" Stroke="Black" Fill="{Binding Brush}" Width="{Binding Mode=OneWay, Source={StaticResource radius}}" Height="{Binding Mode=OneWay, Source={StaticResource radius}}" Margin="0"/>
                    <TextBlock Grid.Row="1" Text="{Binding Number}" FontSize="{Binding Mode=OneWay, Source={StaticResource fontSize}}" HorizontalAlignment="Center" />
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top" FlowDirection="LeftToRight" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemContainerStyle>
            <Style>
                <Setter Property="Control.Margin" Value="2 2 2 2"/>
                <Setter Property="Control.Width" Value="16"/>
            </Style>
        </ItemsControl.ItemContainerStyle>
        <ItemsControl.Template>
            <ControlTemplate TargetType="ItemsControl">
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                    <ItemsPresenter/>
                </Border>
            </ControlTemplate>
        </ItemsControl.Template>
    </ItemsControl>
</UserControl>
